{
  "name": "@humbak/api",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "set NODE_ENV=development&& tsx watch ./src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "set NODE_ENV=development&& node dist/index.js",
    "build": "node build.js",
    "preview": "npm run build && npm run start",
    "prisma:generate": "dotenv -e .env.dev -- pnpx prisma generate",
    "db:push": "dotenv -e .env.dev -- pnpx prisma db push",
    "db:migrate": "dotenv -e .env.dev -- pnpx prisma migrate dev",
    "db:format": "dotenv -e .env.dev -- pnpx prisma format",
    "db:deploy": "pnpx prisma migrate deploy"
  },
  "dependencies": {
    "@humbak/validation": "workspace:*",
    "@trpc/server": "^10.19.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.1",
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.15",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  }
}
